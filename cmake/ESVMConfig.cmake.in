# - Config file for the Exemplar-SVM (ESVM) package

set(ESVM_INCLUDE_DIRS       "@ESVM_CONFIG_INC_DIR@")
set(ESVM_BINARY_DIRS 	    "@ESVM_CONFIG_BIN_DIR@")
set(ESVM_LIBRARY_DIRS       "@ESVM_CONFIG_LIB_DIR@")
set(ESVM_LIBRARY_DEBUG      "@ESVM_CONFIG_LIB_DBG@")
set(ESVM_LIBRARY_RELEASE    "@ESVM_CONFIG_LIB_REL@")

# package dependencies and automatic include of corresponding Find<packages>
include(CMakeFindDependencyMacro)
list(APPEND CMAKE_MODULE_PATH "@ESVM_CONFIG_CMK_DIR@")
find_dependency(LibSVM      MODULE REQUIRED)
find_dependency(mvector     MODULE REQUIRED)
find_dependency(feHOG       CONFIG REQUIRED NAMES feHOG feHOG FE_HOG FeatureExtractorHOG)
find_dependency(CommonCpp   CONFIG REQUIRED)
find_dependency(Boost              REQUIRED)
find_dependency(OpenCV      3.2    REQUIRED)

# append include and library directories
set(ESVM_INCLUDE_DIRS ${ESVM_INCLUDE_DIRS} ${LIBSVM_INCLUDE_DIRS})
set(ESVM_INCLUDE_DIRS ${ESVM_INCLUDE_DIRS} ${mvector_INCLUDE_DIRS})
set(ESVM_INCLUDE_DIRS ${ESVM_INCLUDE_DIRS} ${feHOG_INCLUDE_DIRS})
set(ESVM_INCLUDE_DIRS ${ESVM_INCLUDE_DIRS} ${CommonCpp_INCLUDE_DIRS})
set(ESVM_INCLUDE_DIRS ${ESVM_INCLUDE_DIRS} ${Boost_INCLUDE_DIRS})
set(ESVM_LIBRARY_DIRS ${ESVM_LIBRARY_DIRS} ${OpenCV_LIBRARY_DIRS})
set(ESVM_LIBRARY_DIRS ${ESVM_LIBRARY_DIRS} ${LIBSVM_LIBRARY_DIRS})
set(ESVM_LIBRARY_DIRS ${ESVM_LIBRARY_DIRS} ${mvector_LIBRARY_DIRS})
set(ESVM_LIBRARY_DIRS ${ESVM_LIBRARY_DIRS} ${feHOG_LIBRARY_DIRS})
set(ESVM_LIBRARY_DIRS ${ESVM_LIBRARY_DIRS} ${CommonCpp_LIBRARY_DIRS})
set(ESVM_LIBRARY_DIRS ${ESVM_LIBRARY_DIRS} ${Boost_LIBRARY_DIRS})
set(ESVM_LIBRARY_DIRS ${ESVM_LIBRARY_DIRS} ${OpenCV_LIBRARY_DIRS})

# append specific library dependencies
set(ESVM_LIBRARY_DEBUG   ${ESVM_LIBRARY_DEBUG}   "@feHOG_LIBRARY_DEBUG@")
set(ESVM_LIBRARY_RELEASE ${ESVM_LIBRARY_RELEASE} "@feHOG_LIBRARY_RELEASE@")
set(ESVM_LIBRARY_DEBUG   ${ESVM_LIBRARY_DEBUG}   "@LIBSVM_LIBRARY@")
set(ESVM_LIBRARY_RELEASE ${ESVM_LIBRARY_RELEASE} "@LIBSVM_LIBRARY@")
set(ESVM_LIBRARY_DEBUG   ${ESVM_LIBRARY_DEBUG}   "@CommonCpp_LIBRARY_DEBUG@")
set(ESVM_LIBRARY_RELEASE ${ESVM_LIBRARY_RELEASE} "@CommonCpp_LIBRARY_RELEASE@")